<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:background="#0b1e37"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hi, Welcome!"
		android:layout_margin="15dp"
		android:textSize="30dp"
		android:textColor="#189e85"
		android:id="@+id/aq"
		android:textStyle="bold"
		android:typeface="sans"
         />
	<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_marginLeft="15dp"
		android:layout_marginTop="-10dp"
		android:textSize="20dp"
		android:id="@+id/dates"
		android:textColor="#189e85"
		android:layout_below="@+id/aq"
		android:typeface="sans"
	/>
	 <ImageView
		 android:layout_width="90dp"
		 android:layout_height="90dp"
		 android:layout_alignParentRight="true"
		 android:layout_margin="15dp"
		 android:src="@drawable/hikki"
		 android:id="@+id/imgtop"
		 />
	<com.synnapps.carouselview.CarouselView
        android:id="@+id/xv"
        android:layout_width="match_parent"
        android:layout_height="200dp"
		android:layout_margin="15dp"
		android:layout_marginTop="5dp"
		android:layout_below="@+id/imgtop"
        app:fillColor="#D1C4E9"
        app:pageColor="#00FFFFFF"
        app:radius="4dp"
        app:slideInterval="3000"
        app:strokeColor="#FFFFFF"
        app:strokeWidth="1dp"/>
	 <EditText
		 android:layout_width="fill_parent"
		 android:layout_height="40dp"
		 android:id="@+id/edlimit"
		 android:layout_margin="15dp"	 
		 android:layout_below="@+id/xv"
		 android:gravity="center"
		 android:textColor="#189e85"
		 android:background="@drawable/edittext_bg" 
		 android:hint="input num to num (ex: 1-10). Max 272"
		 android:singleLine="true" 
		 android:inputType="text"
		 android:imeOptions="actionGo"
		 />
	<Button
		android:layout_width="match_parent"
		android:layout_height="40dp"
		android:layout_marginRight="15dp"
		android:layout_marginTop="15dp"
		android:layout_marginLeft="15dp"
		android:text="Search by number page"
		android:layout_below="@+id/edlimit"
		android:id="@+id/num"
		android:textColor="#0b1e37"
		android:background="@drawable/button_style"
		android:gravity="center"/>
	<Button
		android:layout_width="match_parent"
		android:layout_height="40dp"
		android:layout_marginRight="15dp"
		android:layout_marginLeft="15dp"
		android:text="Search by name chara"
		android:id="@+id/namec"
		android:textColor="#ffffff"
		android:layout_below="@+id/num"
		android:background="@drawable/button_style"
		android:gravity="center"/>
	<Button
		android:layout_width="match_parent"
		android:layout_height="40dp"
		android:layout_marginRight="15dp"
		android:layout_marginLeft="15dp"
		android:text="Search by anime title"
		android:textColor="#FFFFFF"
		android:layout_below="@+id/namec"
		android:id="@+id/animec"
		android:background="@drawable/button_style"
		android:gravity="center"/>
	<TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:layout_margin="5dp"
		android:gravity="center"
		android:textSize="10dp"
		android:text="api {https://github.com/satyawikananda} and data {http://jurnalotaku.com/}"
		android:layout_alignParentBottom="true"
		android:id="@+id/stress"
		android:singleLine="true"
		android:ellipsize="marquee"
		android:textColor="#8a8a8a"
		android:typeface="sans"
	/>
</RelativeLayout>
